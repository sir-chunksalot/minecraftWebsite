                    </div>
                    <form id="console-form" autocomplete="off">
                        <input id="console-input" type="text" placeholder="Enter a console command">
                    </form>
                </div>
                <div id="controls">
                    <button id="start-server">Start Server</button>
                    <button id="stop-server">Stop Server</button>
                </div>
            </div>
        </main>
