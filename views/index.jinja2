                        <button id="gamerule-tpall">
                            <img src="/static/images/woodenButton2.png">
                        </button>
                        <img src="/static/images/eyeOfEnder.png">
                        <p>Warp Spawn</p>
                    </div>
                </div>
            </div>
            <div id="server">
                <div id="console">
                    <!-- p means paragraph text (very small) -->
                    <div id="lines">
                        {# <p class="line">NUTLESS was slain by TheStinkyLad</p>
